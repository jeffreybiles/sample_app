%html
  %head
    %title= title
    = render 'layouts/stylesheets'
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    .container
      = render 'layouts/header'
      %section.round
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")
        = yield
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?

